<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.chiralbehaviors.northwind</groupId>
        <artifactId>northwind.app</artifactId>
        <version>0.0.1-SNAPSHOT</version>
    </parent>
    <artifactId>schema-loading</artifactId>
    <name>Ultrastructure Schema Loading</name>
    <description>A module to control initialization and loading of the Ultrastructure database schema</description>

    <profiles>
        <profile>
            <id>database.active</id>
            <build>
                <plugins>
                    <plugin>
                        <executions>
                            <execution>
                                <phase>test</phase>
                                <goals>
                                    <goal>load</goal>
                                </goals>
                                <configuration>
                                    <loader>
                                        <dbaServer>${dba.db.server}</dbaServer>
                                        <dbaPort>${dba.db.port}</dbaPort>
                                        <dbaUsername>${dba.db.login}</dbaUsername>
                                        <dbaPassword>${dba.db.password}</dbaPassword>

                                        <coreServer>${northwind.db.server}</coreServer>
                                        <corePort>${northwind.db.port}</corePort>
                                        <coreUsername>${northwind.db.login}</coreUsername>
                                        <corePassword>${northwind.db.password}</corePassword>
                                        <coreDb>${northwind.db.database}</coreDb>

                                        <dropDatabase>${drop}</dropDatabase>
                                    </loader>
                                </configuration>
                            </execution>
                        </executions>
                        <groupId>com.chiralbehaviors.CoRE</groupId>
                        <artifactId>loader-plugin</artifactId>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>clear</id>
            <build>
                <plugins>
                    <plugin>
                        <executions>
                            <execution>
                                <phase>compile</phase>
                                <goals>
                                    <goal>clear</goal>
                                </goals>
                                <configuration>
                                    <coreServer>${northwind.db.server}</coreServer>
                                    <corePort>${northwind.db.port}</corePort>
                                    <coreUsername>${northwind.db.login}</coreUsername>
                                    <corePassword>${northwind.db.password}</corePassword>
                                    <coreDb>${northwind.db.database}</coreDb>
                                </configuration>
                            </execution>
                        </executions>
                        <groupId>com.chiralbehaviors.CoRE</groupId>
                        <artifactId>loader-plugin</artifactId>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>